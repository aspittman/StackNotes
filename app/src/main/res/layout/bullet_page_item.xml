<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_bullet"
        android:text="@string/bullet_for_list"/>

    <EditText
        android:id="@+id/bullet_text_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="This is a test"
        android:background="@android:color/transparent"
        android:hint="@string/bullet_notepad_hint"
        android:inputType="textMultiLine|textFilter"
        android:layout_toEndOf="@+id/text_bullet" />
</RelativeLayout>